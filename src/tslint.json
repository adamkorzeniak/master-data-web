{
    "extends": [
      "../tslint.json",
      "tslint:recommended",
      "tslint-sonarts"
    ],
    "linterOptions": {
        "exclude": [
            "./polyfills.ts"
        ]
    },
    "rules": {
        "directive-selector": [
            true,
            "attribute",
            "md",
            "camelCase"
        ],
        "component-selector": [
            true,
            "element",
            "md",
            "kebab-case"
        ],
        "arrow-parens": false,
        "object-literal-sort-keys": true,
        "ordered-imports": false,
        "quotemark": [
            true,
            "single",
            "avoid-escape"
        ],
        "trailing-comma": [
            true,
            {
              "multiline": "never",
              "singleline": "never"
            }
        ],
        "no-string-literal": false
    },
    "jsRules": { "object-literal-sort-keys": false }
}
